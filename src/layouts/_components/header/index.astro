---
const links = [
  { path: '/about', text: 'About' },
  { path: '/projects', text: 'Projects' },
  { path: '/blogs', text: 'Blogs' },
];
---

<div
  class='max-h-fit text-neutral-900 sticky top-0 z-50 flex justify-between items-center max-w-3xl p-2 px-3 sm:p-4 mx-auto'
>
  <a
    href='/'
    class='w-8 h-8 sm:w-14 sm:h-14 flex items-center justify-center p-4 bg-white rounded-lg'
  >
    <p class='sm:text-3xl text-lg font-semibold align-middle'>&#394;.</p>
  </a>
  <nav class='flex justify-end gap-4 text-slate-50 text-lg font-semibold'>
    {
      links.map((obj) => (
        <a href={obj.path}>
          <p class='py-2 relative h-fit before:absolute before:bottom-0 before:w-full before:border-yellow-600 before:border-[1px] before:translate-y-1 before:scale-x-0 hover:before:scale-x-100 before:transform before:duration-500 before:transition-transform'>
            {obj.text}
          </p>
        </a>
      ))
    }
  </nav>
</div>
