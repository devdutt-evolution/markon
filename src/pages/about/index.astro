---
import FixedHeight from '../_components/_fixedHeight.astro';
import PageHeader from '../_components/_pageTitle.astro';
import Sidebar from './_components/_sidebar.astro';
import MainSection from './_components/_mainSection.astro';
import Layout from '../../layouts/MainLayout.astro';

const title = 'About Devdutt';
const description =
  'Learn more about Devdutt, a passionate software developer based in Gujarat, India. Discover my skills, experience, and interests in web development and problem-solving.';
---

<Layout
  pageTitle={title}
  pageDescription={description}
  ogTitle={title}
  ogDescription={description}
>
  <FixedHeight color='bg-neutral-900' />
  <div class='bg-neutral-900'>
    <div class='lg:max-w-5xl max-w-2xl px-4 mx-auto space-y-4'>
      <!-- <div class='relative text-6xl font-extrabold animate-text'>AbOUT</div> -->
      <PageHeader text='AbOUT' />

      <div class='relative grid grid-cols-12 gap-4 text-white pb-2'>
        <Sidebar />
        <MainSection />
      </div>
    </div>
  </div>
  <FixedHeight color='bg-neutral-900' />

  <script is:inline async>
    document.querySelectorAll(`.clickEvent`).forEach((ele) => {
      ele.addEventListener('click', () => {
        const scrollToElement = document.querySelector(
          `#${ele.dataset.related}`
        );
        scrollToElement?.scrollIntoView({
          block: 'center',
          behavior: 'smooth',
        });
      });
    });
  </script>
</Layout>
