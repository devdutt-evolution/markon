---
import type { CollectionEntry } from 'astro:content';
import MainLayout from '../../../layouts/MainLayout.astro';
import ProseLayout from '../../../layouts/ProseLayout.astro';
import FixedHeight from '../../_components/_fixedHeight.astro';

interface Props {
  data: CollectionEntry<'projects'>['data'];
  content: any;
}
const { content, data } = Astro.props;
---

<MainLayout
  pageTitle={data.projectName}
  pageDescription={data.shortSummary}
  ogTitle={data.projectName}
  ogDescription={data.shortSummary}
  keywords={data.keywords || []}
>
  <FixedHeight color='bg-neutral-900' />

  <ProseLayout content={content} />

  <FixedHeight color='bg-neutral-900' />
</MainLayout>
