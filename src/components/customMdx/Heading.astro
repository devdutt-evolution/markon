---
import ShareButton from '../SocialButton/ShareButton.astro';
---

<div class='flex justify-between cursor-default'>
  <h1>
    <slot />
  </h1>
  <ShareButton />
  <script>
    // copy the link to blog
    document.querySelector('#share')?.addEventListener('click', (_) => {
      let url = window.location.href;
      navigator.clipboard.writeText(url);
    });
  </script>
</div>

